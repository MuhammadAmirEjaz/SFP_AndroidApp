<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_header"
        android:weightSum="4"
        android:background="@color/colorPrimaryDark"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_shareyouridea"
            android:text="@string/share_idea_header_btn"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/header_button_margin"
            android:onClick="ShareIdea"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_home"
            android:text="@string/home_header_btn"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/header_button_margin"
            android:onClick="Home"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_myprofile"
            android:text="@string/profile_header_btn"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/header_button_margin"
            android:onClick="UserProfile"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            android:text="@string/logout_header_btn"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/header_button_margin"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>